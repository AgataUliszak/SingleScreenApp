<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4"
        android:orientation="vertical"
        tools:context="com.example.android.singlescreenapp.MainActivity">

        <ImageView
            style="@style/ImageStyle1"
            android:src="@drawable/logo" />

        <TextView
            style="@style/StyleTextView2"
            android:drawableLeft="@drawable/place"
            android:lineSpacingExtra="@dimen/extra_spacing"
            android:text="@string/address" />

        <TextView
            style="@style/StyleTextView2"
            android:autoLink="phone"
            android:drawableLeft="@drawable/phone"
            android:text="@string/phone" />

        <TextView
            style="@style/StyleTextView1"
            android:autoLink="web"
            android:drawableLeft="@drawable/mail"
            android:text="@string/web"
            android:textColorLink="@color/colorPrimary" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/mayura" />

    </LinearLayout>
</ScrollView>