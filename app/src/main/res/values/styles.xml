<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Setting style of image View -->
    <style name="ImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingBottom">@dimen/padding_2</item>
    </style>

    <style name="ImageStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingBottom">@dimen/padding_2</item>

    </style>

    <!-- Setting style of View -->
    <style name="StyleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="StyleTextView1" parent="StyleTextView">
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingLeft">@dimen/padding_3</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="StyleTextView2" parent="StyleTextView">
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingLeft">@dimen/padding_4</item>
    </style>

    <style name="StyleTextView3" parent="StyleTextView">
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingLeft">@dimen/padding_3</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
